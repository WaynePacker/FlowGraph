                                   Text="{Binding Name}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Focusable="True"
                                   Cursor="Hand"/>

                --><!--Parent Connector : Wrap in stack panel for correct cursor--><!--

                <StackPanel Grid.Column="0" Grid.Row="1" Cursor="Hand">
